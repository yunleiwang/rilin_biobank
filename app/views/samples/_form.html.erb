<%= form_for(@sample, :html=>{:class=>'form-horizontal', :role=>'form'}) do |f| %>
    <% if @sample.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@sample.errors.count, "error") %> prohibited this sample from being saved:</h2>
          <ul>
            <% @sample.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%#= f.hidden_field :patient_info_id,:value=>1%>
    <div class="widget wgreen">
      <div class="widget-head">
        <div class="pull-left">样本信息</div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>

        </div>

        <div class="clearfix"></div>
      </div>

      <div class="widget-content">
        <div class="padd">
          <!--<br />-->
          <div class="form-group">
            <%= f.label :sample_no, '样本号',:class=>'col-lg-2 control-label' %>
            <div class="col-lg-3">
              <%= f.text_field :sample_no,:class=>'form-control',:disabled=>"" %>
            </div>
            <%= f.label :sample_seq, '样本ID',:class=>'col-lg-2 control-label' %>
            <div class="col-lg-3">
              <%= f.text_field :sample_seq,:class=>'form-control',:disabled=>"" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :user_id, '使用者',:class=>'col-lg-2 control-label' %>
            <div class="col-lg-3">
              <%= f.text_field :user_id,:class=>'form-control' %>
            </div>
            <%= f.label :storage_status, '存储状态',:class=>'col-lg-2 control-label' %>
            <div class="col-lg-3">
              <%= f.text_field :storage_status,:class=>'form-control',:disabled=>"" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :freezing_thawing_times, '冻融次数',:class=>'col-lg-2 control-label' %>
            <div class="col-lg-3">
              <%= f.text_field :freezing_thawing_times,:class=>'form-control',:disabled=>"" %>
            </div>
            <div class="col-lg-2"></div>
            <div class="col-lg-3">
            </div>
          </div>

          <!-- 表单结束-->
          <div class="clearfix"></div>

        </div>
      </div>
      <div class="widget-foot">
        <!-- Footer goes here -->
      </div>
    </div>

    <div class="actions">
      <input type="submit" value="保存" class="btn btn-sm btn-success" />
    </div>
<% end %>
